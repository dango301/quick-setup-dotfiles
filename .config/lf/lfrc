&ctpv -s $id
&ctpvquit $id

# Basic Settings
# set hidden true
set ignorecase true
set icons true

# Custom Functions
cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}

# Archive bindings
cmd unarchive ${{
    case "$f" in
            *.zip) unzip -d "${f%.*}" "$f" ;;
            *.tar.gz) tar -xzvf "$f" -C "${f%.*}" ;;
            *.tar.bz2) tar -xjvf "$f" -C "${f%.*}" ;;
            *.tar) tar -xvf "$f" -C "${f%.*}" ;;
            *) echo "Unsupported format" ;;
    esac
}}

# Trash bindings
#TODO: add confirmation before deleting from Eric's original
cmd trash ${{
  files=$(printf "$fx" | tr '\n' ';')
  while [ "$files" ]; do
    file=${files%%;*}

    trash-put "$(basename "$file")"
    if [ "$files" = "$file" ]; then
      files=''
    else
      files="${files#*;}"
    fi
  done
}}

cmd restore_trash ${{
  trash-restore
}}

# Bindings

# Clear these so that they can be chained with other letters
map d
map m


map au unarchive

# Basic Functions
map . set hidden!
map dd trash
map dr restore_trash
map p paste
map x cut
map y copy
map <enter> open
map R reload
map mf mkfile
map md mkdir
map C clear
# TIPP: open file in default editor with e

